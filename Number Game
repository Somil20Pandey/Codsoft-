import java.util.Random;
import java.util.Scanner;

public class NumberGuessingGame {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        int lowerBound = 1;
        int upperBound = 100;
        int maxAttempts = 7;
        int score = 0;
        int round = 0;

        System.out.println("ğŸ® Welcome to the Number Guessing Game!");

        boolean playAgain = true;
        while (playAgain) {
            round++;
            int targetNumber = random.nextInt(upperBound - lowerBound + 1) + lowerBound;
            int attemptsLeft = maxAttempts;
            boolean guessedCorrectly = false;

            System.out.println("\nğŸ” Round " + round);
            System.out.println("I'm thinking of a number between " + lowerBound + " and " + upperBound + ".");
            System.out.println("You have " + maxAttempts + " attempts to guess it.");

            while (attemptsLeft > 0) {
                System.out.print("Enter your guess: ");

                // Check for valid integer input
                if (!scanner.hasNextInt()) {
                    System.out.println("âŒ Please enter a valid number.");
                    scanner.next(); // Clear invalid input
                    continue;
                }

                int guess = scanner.nextInt();

                if (guess == targetNumber) {
                    System.out.println("ğŸ‰ Correct! You guessed the number!");
                    guessedCorrectly = true;
                    score++;
                    break;
                } else if (guess < targetNumber) {
                    System.out.println("ğŸ“‰ Too low.");
                } else {
                    System.out.println("ğŸ“ˆ Too high.");
                }

                attemptsLeft--;
                System.out.println("Attempts left: " + attemptsLeft);
            }

            if (!guessedCorrectly) {
                System.out.println("ğŸ˜¢ Out of attempts. The number was: " + targetNumber);
            }

            System.out.println("âœ… Your current score: " + score + " / " + round);

            System.out.print("Do you want to play another round? (yes/no): ");
            scanner.nextLine(); // Consume leftover newline
            String response = scanner.nextLine().trim().toLowerCase();
            playAgain = response.equals("yes");
        }

        System.out.println("\nğŸ Game Over! You played " + round + " rounds and scored " + score + " point(s).");
        scanner.close();
    }
}

